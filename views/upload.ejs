<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/xhtml" xml:lang="ja" lang="ja">
  <% include head.ejs %>
  <body>
    <div id="header" class="item-content">
      <a href="/"><div class="float-left btn btn-info"><i class="icon-chevron-left icon-white"></i>List</div></a>
      <div class="float-clear">工事中</div>
    </div>
    <hr />
    <div id="upload" class="unit">
      <form id="upload-form" method="post" action="/upload">
        <fieldset>
          <div class="field-group">
            <label class="control-label" for="inputDate">Date: <span class="red">*</span></label>
            <input type="text" name="date" placeholder="yyyy/mm/dd" />
          </div>
          <div class="field-group">
            <label class="control-label" for="selectGenre">Genre: <span class="red">*</span></label>
            <select onChange="selectUploadGenre" name="genre">
              <% genres.forEach(function(genre){ %>
              <option value="<%= genre.id %>"><%= genre.name %></option>
              <% }) %>
            </select>
          </div>
          <div class="field-group">
            <label class="control-label" for="selectInstructor">Instructor: <span class="red">*</span></label>
            <select onChange="selectUploadInstructor" name="instructor">
              <% instructors.forEach(function(instructor){ %>
              <option value="<%= instructor.id %>"><%= instructor.name %></option>
              <% }) %>
            </select>
          </div>
          <div class="field-group">
            <label class="control-label" for="inputYoutube">Youtube: <span class="red">*</span></label>
            <input type="text" name="url" placeholder="youtube url" />
            <input type="hidden" name="youtube" />
          </div>
          <div class="field-group">
            <label class="control-label" for="inputDescription">Description:</label>
            <input type="text" name="description" placeholder="description" />
          </div>
          <div class="field-group">
            <label class="control-label" for="inputUploader">Your Name:</label>
            <input type="text" name="uploader" placeholder="name or nickname" />
          </div>
          <div class="field-group">
            <label class="control-label" for="inputPassword">Edit Password:</label>
            <input type="text" name="password" placeholder="password for edit" />
          </div>
          <div class="unit">
            <input class="btn btn-primary btn-block" type="submit" value="upload">
          </div>
        </fieldset>
      </form>
    </div>
  </body>
</html>
